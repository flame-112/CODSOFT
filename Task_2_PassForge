# PassForge - Secure password generator

import string
import random

def forge_password(length=8):
    elements = string.ascii_letters + string.digits + string.punctuation
    return ''.join(random.choice(elements) for _ in range(length))

print("🔐 Welcome to PassForge")
try:
    user_length = int(input("Enter desired password length: "))
    if user_length < 4:
        print("Length too short! Choose at least 4 characters.")
    else:
        print("Generated Password:", forge_password(user_length))
except ValueError:
    print("Please enter a valid number.")

# SmartCalc - A minimal arithmetic calculator

def add(val1, val2):
    return val1 + val2

def subtract(val1, val2):
    return val1 - val2

def multiply(val1, val2):
    return val1 * val2

def divide(val1, val2):
    if val2 == 0:
        return "Cannot divide by zero."
    return val1 / val2

print("Welcome to SmartCalc ⚙️")
print("Options: [ + | - | * | / ]")

try:
    first_input = float(input("Enter the first number: "))
    operation = input("Choose an operation: ")
    second_input = float(input("Enter the second number: "))

    if operation == '+':
        result = add(first_input, second_input)
    elif operation == '-':
        result = subtract(first_input, second_input)
    elif operation == '*':
        result = multiply(first_input, second_input)
    elif operation == '/':
        result = divide(first_input, second_input)
    else:
        result = "Invalid operation selected."

    print("Result:", result)

except ValueError:
    print("Invalid number entered. Please restart.")
